#!/bin/sh
xrandr --output DP-0 \
    --primary \
    --mode 2560x1440 \
    --pos 0x0 \
    --rate 155 \
    --rotate normal \
    --output DP-1 --off \
    --output HDMI-0 \
    --mode 1920x1080 \
    --pos 2560x0 \
    --rotate normal \
    --output DP-2 --off \
    --output DP-3 --off \
    --output DP-4 --off \
    --output DP-5 --off \
    --output USB-C-0 --off \
    --output HDMI-A-2-0 --off \
    --output DisplayPort-2-0 --off \
    --output DisplayPort-2-1 --off \
    --output DisplayPort-2-2 --off
